<UserControl 
    x:Class="CDTag.Views.Tag.TagToolbar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d" 
    d:DesignHeight="300" d:DesignWidth="300"
>
    <UserControl.Resources>
        <!-- Disabled ToolBar Image -->
        <Style TargetType="{x:Type Image}" x:Key="toolbarImageStyle">
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Button}, AncestorLevel=1}, Path=IsEnabled}" Value="False">
                    <Setter Property="Opacity" Value="0.25"></Setter>
                </DataTrigger>
            </Style.Triggers>
            <Setter Property="Height" Value="24" />
            <Setter Property="Width" Value="24" />
            <Setter Property="Stretch" Value="Fill" />
        </Style>
    </UserControl.Resources>

    <ToolBar ToolBarTray.IsLocked="True">

        <Button Command="{Binding BackCommand}">
            <!-- TODO: Localize button text -->
            <StackPanel MinWidth="66">
                <Image Style="{StaticResource toolbarImageStyle}" Source="/Resources/Images/TagToolbar/Back.png" />
                <TextBlock Text="Back" HorizontalAlignment="Center"/>
            </StackPanel>
        </Button>

        <Button Command="{Binding ForwardCommand}">
            <!-- TODO: Localize button text -->
            <StackPanel MinWidth="66">
                <Image Style="{StaticResource toolbarImageStyle}" Source="/Resources/Images/TagToolbar/Forward.png" />
                <TextBlock Text="Forward" HorizontalAlignment="Center"/>
            </StackPanel>
        </Button>

        <Button Command="{Binding UpCommand}">
            <!-- TODO: Localize button text -->
            <StackPanel MinWidth="66">
                <Image Style="{StaticResource toolbarImageStyle}" Source="/Resources/Images/TagToolbar/Up.png" />
                <TextBlock Text="Up" HorizontalAlignment="Center"/>
            </StackPanel>
        </Button>

        <Separator />

        <Button Command="{Binding TagAlbumCommand}">
            <!-- TODO: Localize button text -->
            <StackPanel MinWidth="66">
                <Image Style="{StaticResource toolbarImageStyle}" Source="/Resources/Images/TagToolbar/TagAlbum.png" />
                <TextBlock Text="Tag Album" HorizontalAlignment="Center"/>
            </StackPanel>
        </Button>

        <Separator />

        <Button Command="{Binding HelpCommand}">
            <!-- TODO: Localize button text -->
            <StackPanel MinWidth="66">
                <Image Style="{StaticResource toolbarImageStyle}" Source="/Resources/Images/GeneralToolbar/Help.png" />
                <TextBlock Text="Help" HorizontalAlignment="Center"/>
            </StackPanel>
        </Button>

    </ToolBar>
</UserControl>
