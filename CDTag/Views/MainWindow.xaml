<view:WindowViewBase 
    x:Class="CDTag.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:Tag="clr-namespace:CDTag.Views.Tag" 
    xmlns:view="clr-namespace:CDTag.Views" 
    xmlns:Common="clr-namespace:CDTag.Common;assembly=CDTag.Common" 
    Title="CD-Tag" 
    Height="700" 
    Width="1024"
    MinHeight="400"
    MinWidth="600"
    Background="#FFBCDDFD"
    WindowStartupLocation="CenterScreen"
    x:Name="mainWindow"
    view:AttachedProperties.RegisterCommandBindings="{Binding CommandBindings}"
>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Common:ErrorContainer x:Name="ErrorItems" Grid.Row="0" />
        <Tag:TagView x:Name="tagView" Grid.Row="1" />
        
    </Grid>
</view:WindowViewBase>
