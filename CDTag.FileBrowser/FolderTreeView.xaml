<UserControl 
    x:Class="CDTag.FileBrowser.FolderTreeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <DataGrid x:Name="panel1" Grid.Row="0" AutoGenerateColumns="False" GridLinesVisibility="None"
                         SelectionUnit="FullRow" Background="White" SelectionMode="Extended" RowHeight="20" CanUserResizeColumns="False">
            <DataGrid.Columns>
                <!-- TODO: Localization -->
                <DataGridTextColumn Header="Folders" Width="*" CanUserSort="False"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <TreeView x:Name="treeView1" Grid.Row="1" Margin="0,-1,0,0">
            
        </TreeView>
    </Grid>
</UserControl>
